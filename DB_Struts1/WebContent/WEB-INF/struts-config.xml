<!DOCTYPE struts-config PUBLIC
       "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
       "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="login" type="beans.LoginForm">
		</form-bean>
		<form-bean name="emp" type="beans.Employee"></form-bean>
		
        <form-bean name="uploadform" type="beans.FileUploadForm" ></form-bean>
        
        </form-beans>

	<action-mappings>

		<action path="/empcrud" name="emp"
			type="controller.EmpCrudController" parameter="submit">
			<forward name="success" path="/success.jsp" />
			<forward name="fail" path="/fail.jsp" />
			<forward name="find" path="/find.jsp" />
			<forward name="findAll" path="/findAll.jsp" />
			<forward name="login" path="/login.jsp" />
			<forward name="reg" path="/reg.jsp" />
			<forward name="list" path="//empcrud.do?findAll" />
			
	
		
		</action>
		<action path="/login" name="login"
			type="controller.LoginController" input="/login.jsp">
			<forward name="login" path="/login.jsp" />
			<forward name="home" path="/employeehome.jsp" />
		</action>
		<action path="/logout" type="controller.LogoutController">
			<forward name="logout" path="/logout.jsp"></forward>
		</action>
		
		<action path="/returnupdatedelete" type="controller.SelectAction" name="emp" >
			<forward name="updatedelete" path="/updatedelete.jsp" > </forward>
		</action>
		<action path="/update" type="EmpCrudController" parameter="submit">
			<forward name="update" path="/update.jsp"></forward>
		</action>
		
		
		 <action  path="/fileUpload" name="uploadform" type="controller.FileUploadAction" parameter="method"  scope="request" input="/fileUpload.jsp"   >
<!--         <forward name="uploadform" path="/fileUpload.jsp" ></forward> -->
        <forward name="success" path="/fileUploadSuccess.jsp" />
        </action>

	</action-mappings>
	<message-resources parameter="resources/Messages"></message-resources>
	
</struts-config>